{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "noImplicitAny": true,
        "declaration": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "sourceMap": true

    },
    "include": ["src"],
    "exclude": ["node_modules"]
}